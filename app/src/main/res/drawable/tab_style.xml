<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="0dp" />
            <stroke android:width="0dip" android:color="#50000000" />
            <gradient android:angle="-90" android:startColor="#50000000" android:endColor="#50000000"  />
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="0dp" />
            <stroke android:width="0dip" android:color="#1d1d1d" />
            <gradient android:angle="-90" android:startColor="#1d1d1d" android:endColor="#1d1d1d" />
        </shape>
    </item>

</selector>
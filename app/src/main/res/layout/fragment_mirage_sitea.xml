<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mirage.mirage_siteA">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:id="@+id/btn_ct_spawn"
        android:layout_width="125dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:alpha="0.9"
        android:text="CT - SPAWN"
        android:paddingEnd="35dp"
        android:fontFamily="@font/gooddp__"
        android:textSize="35sp"
        android:textColor="#ffff00"
        android:background="@drawable/csgo_smoke2"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_con_jun"
        android:layout_width="125dp"
        android:layout_height="68dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:alpha="0.9"
        android:text="Connect jungle"

        android:background="@drawable/csgo_smoke2"
        android:fontFamily="@font/gooddp__"
        android:textSize="35sp"
        android:textColor="#ffff00"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_ct_spawn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_stairs"
        android:layout_width="125dp"
        android:layout_height="68dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/csgo_smoke2"
        android:alpha="0.9"
        android:text="STAIRS"
        android:paddingEnd="35dp"
        android:textColor="#ffff00"
        android:fontFamily="@font/gooddp__"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_con_jun"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mirage.mirage_sites.mirage_mid">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btn_cat"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:alpha="0.9"
        android:background="@drawable/csgo_smoke2"
        android:fontFamily="@font/gooddp__"
        android:text="Catwalk Short"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_window"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:alpha="0.9"
        android:background="@drawable/csgo_smoke2"
        android:fontFamily="@font/gooddp__"
        android:text="Window: Tspawn"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toEndOf="@+id/btn_connector"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_window_b_apps"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:alpha="0.9"
        android:textColor="#ffffff"
        android:background="@drawable/csgo_smoke2"
        android:fontFamily="@font/gooddp__"
        android:textSize="25dp"
        android:text="Window: B-Apps"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_cat"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_connector"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:alpha="0.9"
        android:background="@drawable/csgo_smoke2"
        android:paddingBottom="26dp"
        android:fontFamily="@font/gooddp__"
        android:text="Connect"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_window_b_apps"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
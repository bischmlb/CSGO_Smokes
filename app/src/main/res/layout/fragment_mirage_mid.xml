<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mirage.mirage_mid">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btn_cat"
        android:layout_width="125dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:alpha="0.9"
        android:text="Catwalk Short"

        android:textColor="#ffee00"
        android:background="@drawable/cloud9"
        android:fontFamily="@font/gooddp__"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_window"
        android:layout_width="125dp"
        android:layout_height="68dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:alpha="0.9"
        android:fontFamily="@font/gooddp__"
        android:text="Window: Spawn"
        android:textColor="#ffee00"
        android:background="@drawable/cloud9"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cat" />

    <Button
        android:id="@+id/btn_window_b_apps"
        android:layout_width="125dp"
        android:layout_height="68dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:alpha="0.9"
        android:textColor="#ffee00"
        android:background="@drawable/cloud9"
        android:fontFamily="@font/gooddp__"
        android:textSize="25sp"
        android:text="Window: B-Apps"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_cat"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_connector"
        android:layout_width="125dp"
        android:layout_height="68dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#ffee00"
        android:background="@drawable/cloud9"

        android:alpha="0.9"
        android:fontFamily="@font/gooddp__"
        android:textSize="25sp"
        android:text="Connect"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_window_b_apps"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    android:background="@drawable/ge"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_mirage"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/mirage"
        android:text="@string/mirage"
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu"
        android:textSize="40dp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_dust2" />

    <Button
        android:id="@+id/btn_cache"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/cache"
        android:text="@string/cache"
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu"
        android:textSize="40dp"
        android:textStyle="italic|bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_mirage" />

    <Button
        android:id="@+id/btn_overpass"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/overpass"
        android:text="@string/overpass"
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu"
        android:textSize="40dp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cache" />

    <Button
        android:id="@+id/btn_train"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/train"
        android:text="@string/train"
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu"
        android:textSize="40sp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_inferno" />

    <Button
        android:id="@+id/btn_nuke"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/nuke"
        android:text="@string/nuke"
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu"
        android:textSize="40dp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_train" />

    <Button
        android:id="@+id/btn_dust2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:alpha="1"
        android:background="@drawable/dust2"
        android:text="@string/dust2"
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_inferno"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/inferno"
        android:text="inferno"
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu"
        android:textSize="40dp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_overpass"
        tools:text="@string/inferno" />

    <Button
        android:id="@+id/btn_cbble"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/cbble"
        android:text="cbble"
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu"
        android:textSize="40dp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_nuke"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="279dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="select a map"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="SELECT A MAP" />


</android.support.constraint.ConstraintLayout>
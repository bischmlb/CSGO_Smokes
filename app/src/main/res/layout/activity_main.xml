<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    android:background="@drawable/miragepaint"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_mirage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:alpha="1"
        android:background="@drawable/go_but_2"
        android:text=""
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu"
        android:textSize="40dp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.569" />

    <Button
        android:id="@+id/btn_cache"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/cache"
        android:text="@string/cache"
        android:textAllCaps="false"
        android:alpha="0.6"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu"
        android:textSize="40dp"
        android:textStyle="italic|bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_mirage" />

    <Button
        android:id="@+id/btn_overpass"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/overpass"
        android:text="@string/overpass"
        android:textAllCaps="false"
        android:alpha="0.6"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu"
        android:textSize="40dp"
        android:visibility="gone"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cache" />

    <Button
        android:id="@+id/btn_train"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/train"
        android:text="@string/train"
        android:textAllCaps="false"
        android:alpha="0.6"
        android:visibility="gone"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu"
        android:textSize="40sp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_inferno" />

    <Button
        android:id="@+id/btn_nuke"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/nuke"
        android:text="@string/nuke"
        android:textAllCaps="false"
        android:alpha="0.6"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu"
        android:textSize="40dp"
        android:textStyle="italic|bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_train" />

    <Button
        android:id="@+id/btn_dust2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/dust2"
        android:text="@string/dust2"
        android:textAllCaps="false"
        android:alpha="0.6"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_inferno"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/inferno"
        android:text="inferno"
        android:alpha="0.6"
        android:textAllCaps="false"
        android:visibility="gone"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu"
        android:textSize="40dp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_overpass"
        tools:text="@string/inferno" />

    <Button
        android:id="@+id/btn_cbble"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/cbble"
        android:text="cbble"
        android:alpha="0.6"
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu"
        android:textSize="40dp"
        android:visibility="gone"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_nuke"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:alpha="0.8"
        android:background="@drawable/roundframe5"
        android:fontFamily="@font/gooddp__"
        android:gravity="center"
        android:text="SmokeGod: Mirage"
        android:textColor="#000000"
        android:textSize="55sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="367dp"
        android:layout_height="91dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/roundframe3"
        android:fontFamily="@font/gooddp__"
        android:paddingStart="20dp"
        android:paddingEnd="60dp"
        android:gravity="center"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="54dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/bulb2"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.974"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>